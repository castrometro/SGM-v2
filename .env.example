# ============================================================================
# SGM v2 - Variables de Entorno
# ============================================================================
# Copiar este archivo a .env.local (desarrollo) o .env.production (producci√≥n)
# ============================================================================

# Entorno: local | production
ENVIRONMENT=local

# ============================================================================
# Django
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# PostgreSQL
# ============================================================================
POSTGRES_DB=sgm_nomina
POSTGRES_USER=sgm_user
POSTGRES_PASSWORD=sgm_password_change_me
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ============================================================================
# Redis
# ============================================================================
REDIS_PASSWORD=Redis_Password_Change_Me!
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ============================================================================
# Celery
# ============================================================================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/0

# ============================================================================
# Frontend
# ============================================================================
VITE_API_URL=http://localhost:8000/api

# ============================================================================
# Flower (Celery Monitor)
# ============================================================================
FLOWER_BASIC_AUTH=admin:flower_password

# ============================================================================
# Redis Insight
# ============================================================================
REDISINSIGHT_USER=admin
REDISINSIGHT_PASS=RedisInsight_Password!
